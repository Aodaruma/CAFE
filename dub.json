{
    "name": "cafe",
    "description": "Creator's Advanced Film Editor",
    "homepage": "https://aoitofu.github.io/CAFE",
    "license": "GNU General Public License v3.0",
    "authors": [
        "aoitofu",
        "Aodaruma",
        "SEED264"
    ],

    "targetName": "cafe",
    "targetPath": "bin",
    "targetType": "executable",

    "dependencies": {
        "dlangui": "~>0.9.56",
        "derelict-gl3": "~>1.0.23",
        "derelict-al": "~>1.0.3",
        "gl3n": "~>1.3.1"
    },

    "stringImportPaths": [
        "./views",
        "./views/themes",
        "./views/langs",
        "./views/icons",
        "./source/renderer/GLSL"
    ],

    "subConfigurations": {
        "dlangui": "sdl"
    },

    "configurations": [
        {
            "name": "default"
        },
        {
            "name": "mt",
            "versions": ["MultiThread"]
        }
    ],

    "copyFiles-windows-x86_64": [
        "dll/x86_64/glfw3.dll",
        "dll/OpenAL32.dll"
    ],
    "copyFiles-windows-x86": [
        "dll/x86/glfw3.dll",
        "dll/OpenAL32.dll"

    ]
}
