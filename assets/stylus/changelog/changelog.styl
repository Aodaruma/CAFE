#changelog {
    position: relative;
    z-index: 4;
    height:100%;
    min-height: 'calc(100vh - %s)' % ($nav_height + $footer_height);
    &>.bg {
        fill();
        background: #E0DFD8;
    }
    &>.contents {
        width: $pc_width;
        height: 100%;
        position: relative;
        z-index: 1;
        margin: 0 auto;
        padding: 10rem 0;
        hCentering();
        &>.title_wrap {
            hCentering();
            &>.title {
                font-family: "Raleway";
                font-size: 4rem;
                font-weight: 600;
                letter-spacing: 12px;
                color: $theme3;
                margin-bottom: 1.5rem;
            }
            &>.sub_title {
                font-size: 1.25rem;
                font-weight: 400;
                letter-spacing: 3px;
                color: $theme3;
            }
        }
        &>.changelogs {
            margin-top: 5rem;
            width: 60%;
            &>.changelog {
                margin-bottom: 5rem;
                &:last-of-type {
                    margin-bottom: 0;
                }
                &>.version_wrap {
                    &>.version {
                        font-size: 3rem;
                        font-family: "Roboto";
                        color: $theme3;
                        font-weight: 700;
                        letter-spacing: 2px;
                    }
                }
                &>.date_wrap {
                    margin-top: .5rem;
                    margin-left: 1rem;
                    &>.date {
                        font-size: 1.5rem;
                        font-family: "Roboto";
                        color: $theme3;
                        font-weight: 400;
                        letter-spacing: 2px;
                    }
                }
                &>.changes {
                    margin-left: 2.5rem;
                    margin-top: 2.5rem;
                    &>.change {
                        vCentering(Justify: flex-start);
                        margin-bottom: 1.5rem;
                        &:last-of-type {
                            margin-bottom: 0;
                        }
                        &>.label_wrap {
                            hCentering();
                            width: 90px;
                            padding: .75rem 0;
                            border-radius: 3px;
                            &>.label {
                                font-family: "Roboto";
                                font-size: 1rem;
                                font-weight: 700;
                                letter-spacing: 1px;
                                color: $theme2;
                            }
                            &.fixed {
                                background: #696969;
                            }
                            &.updated,&.changed {
                                background: #32C6A6;
                            }
                            &.delated {
                                background: #FA8072;
                            }
                            &.added {
                                background: $theme1;
                            }
                        }
                        &>.text_wrap {
                            margin-left: 1.5rem;
                            width: 350px;
                            &>.text {
                                font-size: 1.25rem;
                                letter-spacing: 2px;
                                color: $theme3;
                            }
                        }
                    }
                }
            }
        }
    }
}

@media screen and (max-width:$pc_width) {
    #changelog {
        height: 100%;
        &>.contents {
            width: 100%;
            padding: 5rem 0;
            &>.title_wrap {
                hCentering();
                padding: 0 4rem;
                text-align: center;
                &>.title {
                    font-size: 2.5rem;
                    margin-bottom: 1.5rem;
                    letter-spacing: 2px;
                    margin-bottom: 1rem;
                }
                &>.sub_title {
                    font-size: 1rem;
                    font-weight: 400;
                    letter-spacing: 2px;
                }
            }
            &>.changelogs {
                margin-top: 2.5rem;
                width: 100%;
                &>.changelog {
                    margin-bottom: 5rem;
                    &:last-of-type {
                        margin-bottom: 0;
                    }
                    &>.version_wrap {
                        width: 100%;
                        text-align: center;
                        &>.version {
                            font-size: 3rem;
                        }
                    }
                    &>.date_wrap {
                        width: 100%;
                        text-align: center;
                        margin-left:0;
                        &>.date {
                            font-size: 1.5rem;
                        }
                    }
                    &>.changes {
                        margin-left:0;
                        margin-top: 2.5rem;
                        &>.change {
                            hCentering();
                            width: 100%;
                            padding: 0 5rem;
                            &>.label_wrap {
                                margin-bottom: 8px;
                                padding: .25rem 0;
                                width: 80px;
                                &>.label {
                                }
                            }
                            &>.text_wrap {
                            width: 100%;
                            text-align: center;
                                margin-left: 1.5rem;
                                &>.text {
                                    font-size: .9rem;
                                    letter-spacing: 1px;
                                    color: $theme3;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}