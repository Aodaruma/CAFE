#download {
    position: relative;
    z-index: 4;
    &>.bg {
        fill();
        background: #E0DFD8;
    }
    &>.contents {
        width: $pc_width;
        height: 100%;
        position: relative;
        z-index: 1;
        margin: 0 auto;
        padding: 15rem 0;
        hCentering();
        &>.title_wrap {
            hCentering();
            &>.title {
                font-family: "Raleway";
                font-size: 4rem;
                font-weight: 600;
                letter-spacing: 12px;
                color: $theme3;
                margin-bottom: 1.5rem;
            }
            &>.sub_title {
                font-size: 1.25rem;
                font-weight: 400;
                letter-spacing: 3px;
                color: $theme3;
            }
        }
        &>.button_wrap {
            vCentering();
            margin-top: 6rem;
            &>.button {
                position: relative;
                width: $button_width=180px;
                height: $button_height=50px;
                background: $theme1;
                vCentering();
                margin: 0 1.5rem;
                border-radius: 3px;
                box-shadow: 0 6px 0 rgba($theme3, .125);
                overflow: hidden;
            user-select:none;
                &:first-of-type {
                    margin-left: 0;
                }
                &:last-of-type {
                    margin-right: 0;
                }
                &>.icon_wrap {
                    margin-right: .5rem;
                    hCentering();
                    &>.icon {
                        color: $theme2;
                        font-size: 2rem;
                    }
                }
                &>.link {
                    fill();
                    z-index: 100;
                    cursor: pointer;
                }
                &>.text_wrap {
                    &>.text {
                        color: $theme2;
                        font-size: 1.5rem;
                        font-family: "Roboto";
                        font-weight: 400;
                        letter-spacing: 3px;
                    }
                }
                $hover_dur=.125s;
                $hover_ease=ease-out;
                transition: box-shadow $hover_dur $hover_ease,
                transform $hover_dur $hover_ease &:after {
                    content: "";
                    position: absolute;
                    $size=( math((($button_width / 2)**2) + (($button_height / 2) ** 2), "sqrt")) * 2;
                    width: $size;
                    height: $size;
                    left: ($size - $button_width)/2;
                    top: ($size - $button_height)/2;
                    border-radius: 50%;
                    background: $theme2;
                    opacity: 0;
                    transform: scale(0);
                    transition: $hover_dur transform $hover_ease, $hover_dur opacity $hover_ease;
                }
                &:hover {
                    &:after {
                        transform: scale(1);
                        opacity: .25;
                    }
                }
                &:active {
                    transform: translateY(6px);
                    box-shadow: 0 0 0 rgba($theme3, .125);
                }
            }
        }
    }
}

@media screen and (max-width:$pc_width) {
    #download {
         &>.contents {
            width: 100%;
            padding: 5rem 0;
            &>.title_wrap {
                hCentering();
                padding: 0 4rem;
                text-align: center;
                &>.title {
                    font-size: 2.5rem;
                    margin-bottom: 1.5rem;
                    letter-spacing: 2px;
                    margin-bottom: 1rem;
                }
                &>.sub_title {
                    font-size: 1rem;
                    font-weight: 400;
                    letter-spacing: 2px;
                }
            }
            &>.button_wrap{
                margin-top: 2.5rem;
            }
        }
    }
}