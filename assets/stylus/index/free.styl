#free {
    position: relative;
    z-index: 4;
    &>.bg {
        fill();
        background: #E0DFD8;
    }
    &>.contents {
        width: $pc_width;
        height: 100%;
        position: relative;
        z-index: 1;
        margin: 0 auto;
        padding: 15rem 0;
        hCentering();
        &>.title_wrap {
            hCentering();
            &>.title {
                font-family: "Raleway";
                font-size: 4rem;
                font-weight: 600;
                letter-spacing: 12px;
                color: $theme3;
                margin-bottom: 1.5rem;
            }
            &>.sub_title {
                font-size: 1.25rem;
                font-weight: 400;
                letter-spacing: 3px;
                color: $theme3;
            }
        }
        &>.wrap {
            width: 100%;
            margin-top: 5rem;
            padding: 0 10rem;
            vCentering();
            &>.lefter {
                &>.icon_wrap {
                    padding: 4rem;
                    background: $theme1;
                    border-radius: 50%;
                    hCentering();
            user-select:none;
                    &>.icon {
                        color: $theme2;
                        font-size: 4rem;
                        text-shadow: 4px 4px rgba($theme3, .25);
                    }
                }
            }
            &>.righter {
                width: 100%;
                padding-left: 3rem;
                &>.text_wrap {
                    &>.text {
                        color: $theme3;
                        letter-spacing: 1px;
                        font-size: 1.2rem;
                        margin-bottom: 1rem;
                        &:last-of-type {
                            margin-bottom: 0;
                        }
                    }
                }
            }
        }
    }
}

@media screen and (max-width:$pc_width) {
    #free {
        &>.contents {
            width: 100%;
            padding: 5rem 0;
            &>.title_wrap {
                hCentering();
                padding: 0 4rem;
                text-align: center;
                &>.title {
                    font-size: 2.5rem;
                    margin-bottom: 1.5rem;
                    letter-spacing: 2px;
                    margin-bottom: 1rem;
                }
                &>.sub_title {
                    font-size: 1rem;
                    font-weight: 400;
                    letter-spacing: 2px;
                }
            }
            &>.wrap {
                padding: 0;
                margin-top: 2.5rem;
                hCentering();
                &>.lefter {
                    margin-bottom: 2rem;
                    &>.icon_wrap {
                        padding: 2.5rem;
                        &>.icon {
                            font-size: 2rem;
                        }
                    }
                }
                &>.righter {
                    padding: 0 4rem;
                    &>.text_wrap {
                        &>.text {
                            font-size: 1rem;
                            letter-spacing: 0;
                        }
                    }
                }
            }
        }
    }
}