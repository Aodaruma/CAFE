#all_pratform {
    position: relative;
    z-index: 4;
    &>.bg {
        fill();
        background: #E0DFD8;
    }
    &>.contents {
        width: $pc_width;
        height: 100%;
        position: relative;
        z-index: 1;
        margin: 0 auto;
        padding: 15rem 0;
        hCentering();
        &>.title_wrap {
            hCentering();
            &>.title {
                font-family: "Raleway";
                font-size: 4rem;
                font-weight: 600;
                letter-spacing: 12px;
                color: $theme3;
                margin-bottom: 1.5rem;
            }
            &>.sub_title {
                font-size: 1.25rem;
                font-weight: 400;
                letter-spacing: 3px;
                color: $theme3;
            }
        }
        &>.pratforms_wrap {
            width: 100%;
            vCentering(Align: flex-start);
            margin-top: 5rem;
            padding: 0 10rem;
            &>.pratform {
                width: 100%;
                hCentering();
                margin: 0 1rem;
                &:first-of-type {
                    margin-left: 0;
                }
                &:last-of-type {
                    margin-right: 0;
                }
                &>.icon_wrap {
                    padding: 2.5rem;
                    background: $theme1;
                    border-radius: 50%;
                    hCentering();
            user-select:none;
                    &>.icon {
                        color: $theme2;
                        font-size: 2.5rem;
                        text-shadow: 4px 4px rgba($theme3, .25);
                    }
                }
                &>.title_wrap {
                    width: 100%;
                    margin-top: 2.5rem;
                    position: relative;
                    padding-bottom: 1rem;
                    &>.title {
                        color: $theme3;
                        font-size: 1.5rem;
                        font-family: "Raleway";
                        font-weight: 700;
                        letter-spacing: 4px;
                        text-align: center;
                    }
                }
                &>.texts_wrap {
                    width: 100%;
                    margin-top: 2rem;
                    padding: 0 2.2rem;
                    &>.text {
                        font-weight: 400;
                        font-size: 1.1rem;
                        letter-spacing: 1px;
                        color: $theme3;
                    }
                }
            }
        }
        &>.and_wrap {
            margin: 7.5rem 0;
            .and {
                font-size: 2.5rem;
                font-family: "Raleway";
                font-weight: 900;
                color: $theme3;
                letter-spacing: 6px;
            }
        }
        &>._64bit {
            hCentering();
            &>.icon_wrap {
                width: 160px;
                height: @width;
                background: $theme1;
                hCentering();
                border-radius: 50%;
            user-select:none;
                &>.icon {
                    color: $theme2;
                    font-size: 1.5rem;
                    letter-spacing: 6px;
                    text-shadow: 4px 4px rgba($theme3, .25);
                }
            }
            &>.text_wrap {
                margin-top: 3rem;
                &>.text {
                    color: $theme3;
                    font-size: 1.5rem;
                    letter-spacing: 3px;
                }
            }
        }
    }
}

@media screen and (max-width:$pc_width) {
    #all_pratform {
        &>.contents {
            width: 100%;
        padding: 5rem 0;
            &>.title_wrap {
                hCentering();
                    padding: 0 4rem;
                text-align: center;
                &>.title {
                    font-size: 2.5rem;
                    margin-bottom: 1.5rem;
                    letter-spacing: 2px;
                    margin-bottom: 1rem;
                }
                &>.sub_title {
                    font-size: 1rem;
                    font-weight: 400;
                    letter-spacing: 2px;
                }
            }
            &>.pratforms_wrap{
                hCentering();
                padding: 0;
                &>.pratform{
                            margin: 0;
                            margin-bottom: 1rem;
                            &:last-of-type {
                                margin-bottom: 0;
                            }
                            &>.title_wrap{
                                margin-top:8px;
                            }
                }
            }
            &>.and_wrap{
                margin: 2.5rem 0;
            }
            &>._64bit{
                &>.icon_wrap{
                    height: 120px;
                    width: @height;
                }
                &>.text_wrap{
                    width: 75%;
                    margin-top:12px;
                    &>.text{
                        font-size: 1.2rem;
                        letter-spacing: 1px;
                    }
                }
            }
        }
    }
}