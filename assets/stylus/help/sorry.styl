#sorry {
    position: relative;
    z-index: 4;
    height:100%;
    min-height: 'calc(100vh - %s)' % ($nav_height + $footer_height);
    &>.bg {
        fill();
        background: #E0DFD8;
    }
    &>.contents {
        width: $pc_width;
        min-height: 'calc(100vh - %s)' % ($nav_height + $footer_height)
        position: relative;
        z-index: 1;
        margin: 0 auto;
        hCentering();
        &>.title_wrap {
            hCentering();
            &>.title {
                font-family: "Raleway";
                font-size: 4rem;
                font-weight: 600;
                letter-spacing: 12px;
                color: $theme3;
                margin-bottom: 1.5rem;
            }
            &>.sub_title {
                font-size: 1.25rem;
                font-weight: 400;
                letter-spacing: 3px;
                color: $theme3;
            }
        }
    }
}

@media screen and (max-width:$pc_width) {
    #sorry {
        height: 100%;
        &>.contents {
            width: 100%;
            padding: 5rem 0;
            &>.title_wrap {
                hCentering();
                padding: 0 4rem;
                text-align: center;
                &>.title {
                    font-size: 2.5rem;
                    margin-bottom: 1.5rem;
                    letter-spacing: 2px;
                    margin-bottom: 1rem;
                }
                &>.sub_title {
                    font-size: 1rem;
                    font-weight: 400;
                    letter-spacing: 2px;
                }
            }
            
        }
    }
}